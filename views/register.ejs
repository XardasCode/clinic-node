<%- include ('head.ejs'); -%>


<div class="row d-flex justify-content-center align-items-center mt-5">
    <div class="col-5 mt-5">
        <h2 class="text-center mb-2">Registration</h2>
        <hr/>
        <form id="registerForm">
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email"
                       class="form-control"
                       id="email" aria-describedby="emailHelp" required/>
                <p class="mt-3 text-danger visually-hidden" id="errorEmail"></p>
            </div>


            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control"
                       id="username" aria-describedby="usernameHelp"
                       pattern="[A-Za-zА-Яа-я ]+" required/>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control"
                       id="password"
                       required
                       minLength="5"
                       aria-describedby="passwordHelp"
                       placeholder="Password must be at least 5 characters"/>
            </div>
            <div class="d-grid gap-2 col-6 mx-auto">
                <button class="btn btn-primary" type="submit">Register</button>
            </div>
        </form>
        <div class="text-center mt-3">
            <p class="mb-0">Already have an account? <a href="/api/v1/auth" class="text-primary">Login
                    here</a></p>
        </div>
    </div>
</div>

<script src="/js/register.js"></script>

<%- include ('footer.ejs'); -%>